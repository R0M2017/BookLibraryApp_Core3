@model IEnumerable<Books>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
            <th>
                Year of Publication
            </th>
            <th>
                Publisher
            </th>
            <th>
                Image
            </th>
        </tr>
    </thead>
    @if (Model.Count() == 0)
    {

    }
    else
    {
        <tbody>

            @foreach (Books b in Model)
            {
                <tr>
                    <td>
                        @b.BookTitle
                    </td>
                    <td>
                        @b.BookAuthor
                    </td>
                    <td>
                        @b.YearOfPublication
                    </td>
                    <td>
                        @b.Publisher
                    </td>
                    <td>
                        <img src="@b.ImageUrlM" />
                    </td>
                </tr>
            }
        </tbody>
    }
</table>
