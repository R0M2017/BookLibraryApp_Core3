@model List<Books>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
    TempData["ControllerState"] = "Home";
    TempData["ViewState"] = "Index";
}

<style>
    .bookfont {
        color: white;
    }
    .bookfont:hover {
        color: aqua;
    }
</style>

<div class="container">
    <div class="jumbotron">
        <div class="library">
            <div class="book" id="book-1">
                <a class="bookfont" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </div>
            <div class="book" id="book-2">
                <a class="bookfont" asp-area="" asp-controller="Books" asp-action="Index">Books</a>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="book" id="book-3">
                    <form name="signoutForm" asp-controller="Account" asp-action="Logout">
                        <a class="bookfont pt-2" href="#" onclick="document.signoutForm.submit(); return false;">Sign Out</a>
                    </form>
                </div>
            }
            else
            {
                <div class="book" id="book-3">
                    <a class="bookfont" asp-controller="Account" asp-action="Register">New User</a>
                </div>
            }
            @*<div class="shelf"></div>*@
        </div>
    </div>
    <div>
        @await Html.PartialAsync("_homePageBookView", Model)
    </div>
    <div class="jumbotron">
        <img src="~/img/library_3.jpg" alt="libraryImage" class="img-fluid" />
    </div>
</div>